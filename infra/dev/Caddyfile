lokit.co.kr {
    log {
            output file /var/log/caddy/access.log
            format json
        }

    reverse_proxy localhost:8080 {
                                     health_uri /api/actuator/health
                                     health_interval 10s
                                     health_timeout 5s

                                     header_up Host {host}
                                     header_up X-Real-IP {remote}
                                 }
}

dev.lokit.co.kr, www.lokit.co.kr {
    redir https://lokit.co.kr{uri} permanent
}
